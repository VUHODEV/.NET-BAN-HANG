@model IEnumerable<Lab03.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Danh sách Đơn Hàng</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên Khách Hàng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ApplicationUser</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalPrice.ToString("N0") VND</td>
               
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

