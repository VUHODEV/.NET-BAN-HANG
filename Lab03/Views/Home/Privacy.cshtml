@{
    ViewData["Title"] = "Chính sách bảo mật";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - XIP THE KING</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            margin: 80px auto;
            padding: 40px;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #2c3e50;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 30px;
            text-align: center;
            background: linear-gradient(to right, #000000, #d4af37);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #2c3e50;
            margin-top: 40px;
            margin-bottom: 20px;
            border-bottom: 2px solid #d4af37;
            padding-bottom: 10px;
            display: inline-block;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #555;
            margin-bottom: 20px;
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

            ul li {
                font-size: 1.1rem;
                color: #555;
                margin-bottom: 15px;
                position: relative;
                padding-left: 25px;
            }

                ul li:before {
                    content: "\f135";
                    font-family: 'bootstrap-icons';
                    color: #d4af37;
                    position: absolute;
                    left: 0;
                    top: 2px;
                    font-weight: bold;
                }

        a {
            color: #000;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
            border-bottom: 2px solid #d4af37;
        }

            a:hover {
                color: #d4af37;
            }

        .highlight {
            background: linear-gradient(135deg, #f8f8f8, #fff9e6);
            padding: 25px;
            border-radius: 15px;
            margin: 30px 0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            border-left: 5px solid #d4af37;
            transition: all 0.3s ease;
        }

        .vip-badge {
            display: inline-block;
            background: linear-gradient(to right, #000000, #d4af37);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 0.9rem;
            margin-left: 10px;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container">
