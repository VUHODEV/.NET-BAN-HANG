@model IEnumerable<Lab03.Models.Product>
@{
    int numOfQuantity = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product - XIP THE KING</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 80px auto;
            padding: 40px;
            background: #fff;
            border-radius: 20px;
        }

        h2 {
            font-size: 3rem;
            font-weight: 700;
            color: #2c3e50;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 40px;
            text-align: center;
            background: linear-gradient(to right, #3498db, #e74c3c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 15px;
        }

            .table thead th {
                font-size: 1.2rem;
                font-weight: 600;
                color: #2c3e50;
                text-transform: uppercase;
                letter-spacing: 1px;
                padding: 15px;
                background: linear-gradient(135deg, #fefefe, #f5f7fa);
                border: none;
            }

            .table tbody tr {
                background: #fff;
                border-radius: 15px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .table tbody tr:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                }

            .table td {
                padding: 20px;
                vertical-align: middle;
                font-size: 1.1rem;
                color: #7f8c8d;
                border: none;
            }

                .table td img {
                    max-width: 200px;
                    border-radius: 10px;
                    transition: transform 0.3s ease;
                }

            .table tr:hover img {
                transform: scale(1.05);
            }

            .table a {
                color: #3498db;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s ease;
            }

                .table a:hover {
                    color: #e74c3c;
                }

        .btn-outline-dark {
            border: 2px solid #34495e;
            color: #34495e;
            font-weight: 600;
            text-transform: uppercase;
            padding: 8px 20px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-outline-dark:hover {
                background-color: #34495e;
                color: #fff;
                transform: scale(1.05);
            }

            .btn-outline-dark i {
                transition: transform 0.3s ease;
            }

            .btn-outline-dark:hover i {
                transform: translateX(5px);
            }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        /* Nút View - Màu tím nhạt */
        .btn-view {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 600;
            text-transform: uppercase;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            box-shadow: 0 4px 10px rgba(155, 89, 182, 0.3);
        }

            .btn-view:hover {
                background: linear-gradient(135deg, #8e44ad, #9b59b6);
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(155, 89, 182, 0.4);
                color: white;
            }

        /* Nút Add to Cart - Màu cam */
        .btn-add-to-cart {
            background: linear-gradient(135deg, #e67e22, #d35400);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 600;
            text-transform: uppercase;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            box-shadow: 0 4px 10px rgba(230, 126, 34, 0.3);
        }

            .btn-add-to-cart:hover {
                background: linear-gradient(135deg, #d35400, #e67e22);
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(230, 126, 34, 0.4);
                color: white;
            }

            /* Hiệu ứng khi click */
            .btn-view:active, .btn-add-to-cart:active {
                transform: translateY(1px);
            }


        }

    </style>
</head>
<body>
    <div class="container">
        <h2>Product</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("#,##0") Vnđ</td>
                        <td>@product.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImgUrl))
                            {
                                <img src="@product.ImgUrl" alt="@product.Name" />
                            }
                        </td>
                        <td>@product.Category?.Name</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-view">
                                    <i class="bi bi-eye-fill"></i> View Details
                                </a>
                                <a asp-controller="ShoppingCart" asp-action="AddToCart"
                                   asp-route-productId="@product.Id"
                                   asp-route-quantity="@numOfQuantity"
                                   class="btn btn-add-to-cart">
                                    <i class="bi-cart-fill"></i> Add to Cart
                                </a>
                            </div>
                        </td>
                    </tr>
                }   
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const rows = document.querySelectorAll('.table tbody tr');
            rows.forEach(row => {
                row.addEventListener('mouseenter', () => {
                    row.style.background = 'linear-gradient(135deg, #fefefe, #f5f7fa)';
                });
                row.addEventListener('mouseleave', () => {
                    row.style.background = '#fff';
                });
            });
        });
    </script>
</body>
</html>